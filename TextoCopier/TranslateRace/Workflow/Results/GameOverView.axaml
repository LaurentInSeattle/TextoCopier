<UserControl 
	x:Class="Lyt.TranslateRace.Workflow.Results.GameOverView"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
	xmlns:glyphs="clr-namespace:Lyt.Avalonia.Controls.Glyphs;assembly=Lyt.Avalonia.Controls"
    xmlns:theme="clr-namespace:Lyt.TranslateRace"
    xmlns:vm="clr-namespace:Lyt.TranslateRace.Workflow.Results"
    x:DataType="vm:GameOverViewModel" 
	Background="Transparent"
	>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="8" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="8" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="0" />
			<RowDefinition Height="70" />
			<RowDefinition Height="*" />
			<RowDefinition Height="70" />
			<RowDefinition Height="16" />
		</Grid.RowDefinitions>

		<TextBlock
			Text="{Binding GameOver}"
			Foreground="{Binding GameOverColor}"
			Grid.Column="1" Grid.ColumnSpan="999" Grid.Row="1"
			HorizontalAlignment="Center" VerticalAlignment="Top"
			Margin="0"
			FontSize="72" FontWeight="Bold"
			/>
		<Grid
			x:Name="statsGrid"
			Grid.Row="2" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="2"
			ShowGridLines="False"
			Margin="0 "
			>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="12" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="1.1*" />
				<ColumnDefinition Width="12" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="32"/>
				<RowDefinition Height="48"/>
				<RowDefinition Height="48"/>
				<RowDefinition Height="48"/>
				<RowDefinition Height="48"/>
				<RowDefinition Height="48"/>
				<RowDefinition Height="48"/>
				<RowDefinition Height="48"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>
			<!-- Right Col -->
			<TextBlock
				Grid.Row="1" Grid.Column="2"
				VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
				TextWrapping="Wrap"
				TextAlignment="Left"
				Text="{Binding Plays}"
				Foreground="{x:Static theme:ColorTheme.UiText}"
				FontSize="26"
                />
			<TextBlock
				Grid.Row="2" Grid.Column="2"
				VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
				TextWrapping="Wrap"
				TextAlignment="Left"
				Text="{Binding WinsLosses}"
				Foreground="{x:Static theme:ColorTheme.UiText}"
				FontSize="26"
                />
			<TextBlock
				Grid.Row="3" Grid.Column="2"
				VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
				TextWrapping="Wrap"
				TextAlignment="Left"
				Text="{Binding Percent}"
				Foreground="{x:Static theme:ColorTheme.UiText}"
				FontSize="26"
                />
			<TextBlock
				Grid.Row="4" Grid.Column="2"
				VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
				TextWrapping="Wrap"
				TextAlignment="Left"
				Text="{Binding Streaks}"
				Foreground="{x:Static theme:ColorTheme.UiText}"
				FontSize="26"
                />

			<!-- Left Col -->
			<TextBlock
				Grid.Row="1" Grid.RowSpan="3" Grid.Column="1"
				VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
				TextWrapping="Wrap"
				TextAlignment="Left"
				Text="{Binding IsWon}"
				Foreground="{Binding IsWonColor}"
				FontSize="78"
                />
			<TextBlock
				Grid.Row="4" Grid.Column="1"
				VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
				TextWrapping="Wrap"
				TextAlignment="Left"
				Text="{Binding Duration}"
				Foreground="{x:Static theme:ColorTheme.UiText}"
				FontSize="26"
                />
			<TextBlock
				Grid.Row="5" Grid.Column="1"
				VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
				TextWrapping="Wrap"
				TextAlignment="Left"
				Text="{Binding Matches}"
				Foreground="{x:Static theme:ColorTheme.UiText}"
				FontSize="26"
                />
			<TextBlock
				Grid.Row="6" Grid.Column="1"
				VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
				TextWrapping="Wrap"
				TextAlignment="Left"
				Text="{Binding Missed}"
				Foreground="{x:Static theme:ColorTheme.UiText}"
				FontSize="26"
                />
			<TextBlock
				Grid.Row="7" Grid.Column="1"
				VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
				TextWrapping="Wrap"
				TextAlignment="Left"
				Text="{Binding Clicks}"
				Foreground="{x:Static theme:ColorTheme.UiText}"
				FontSize="26"
                />

			<TextBlock
				Grid.Row="5" Grid.Column="2"
				VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
				TextWrapping="Wrap"
				TextAlignment="Left"
				Text="{Binding TotalMatches}"
				Foreground="{x:Static theme:ColorTheme.UiText}"
				FontSize="26"
                />
			<TextBlock
				Grid.Row="6" Grid.Column="2"
				VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
				TextWrapping="Wrap"
				TextAlignment="Left"
				Text="{Binding TotalMissed}"
				Foreground="{x:Static theme:ColorTheme.UiText}"
				FontSize="26"
                />
			<TextBlock
				Grid.Row="7" Grid.Column="2"
				VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
				TextWrapping="Wrap"
				TextAlignment="Left"
				Text="{Binding TotalClicks}"
				Foreground="{x:Static theme:ColorTheme.UiText}"
				FontSize="26"
                />
		</Grid>
		<glyphs:GlyphButton
			x:Name="againButton"
			Margin="0 0 0 0"
			Style="{StaticResource ViewIconButton}"
			Grid.Column="2" Grid.Row="3"
			GlyphSource="arrow_repeat_all"
			Text="Gioca di Nuovo"
			Command="{Binding OnPlayAgain}"
			Width="360"
    		/>
		<glyphs:GlyphButton
			x:Name="exitButton"
			Margin="0 0 0 0"
			Style="{StaticResource ViewIconButton}"
			Grid.Column="1" Grid.Row="3"
			GlyphSource="dismiss"
			Text="Fine e Chiudi"
			Width="360"
			HorizontalAlignment="Left"
			Command="{Binding OnExit}"
    		/>
	</Grid>
</UserControl>
