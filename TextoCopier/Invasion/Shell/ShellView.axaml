<UserControl 
    x:Class="Lyt.Invasion.Shell.ShellView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wf="clr-namespace:Lyt.Invasion.Workflow"
    xmlns:vm="clr-namespace:Lyt.Invasion.Shell"
	xmlns:glyphs="clr-namespace:Lyt.Avalonia.Controls.Glyphs;assembly=Lyt.Avalonia.Controls"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:DataType="vm:ShellViewModel" 
    Background="Transparent"
    >
	<Grid
        x:Name="InnerGrid"
        Background="Transparent"
        >
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="80" MaxWidth="80" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="56" MaxHeight="56" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Image
			Source="{Binding MapImage}"
			Grid.Column="0" Grid.Row="0" 
			Grid.ColumnSpan="999" Grid.RowSpan="999" 
			Stretch="Uniform"
			/>
	</Grid>
</UserControl>
