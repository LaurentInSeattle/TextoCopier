<UserControl 
	x:Class="Lyt.WordRush.Workflow.Countdown.CountdownView"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    xmlns:theme="clr-namespace:Lyt.WordRush"
    xmlns:vm="clr-namespace:Lyt.WordRush.Workflow.Countdown"
    x:DataType="vm:CountdownViewModel" 
	Background="Transparent"
	>
	<TextBlock
		Text="{Binding Comment}"
		Foreground="{Binding CommentColor}"
		HorizontalAlignment="Center" VerticalAlignment="Center"
		Margin="0 -200 0 0"
		FontSize="140" FontWeight="Bold"
		/>
</UserControl>
